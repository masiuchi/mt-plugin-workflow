<mtapp:setting
    id="workflow_can_publish"
    label="<__trans phrase="Publishers">:">
    <ul>
        <mt:loop name="authors_loop">
        <li><input type="checkbox" class="cb" name="workflow_can_publish" id="workflow_can_publish_<mt:var name="author_id">" value="<mt:var name="author_id">" <mt:if name="author_can_publish">checked="checked"</mt:if> />&nbsp;<mt:var name="author_name"></li>
        </mt:loop>
    </ul>
</mtapp:setting>

<mtapp:setting
    id="email_notifications"
    label="<__trans phrase="Email Notifications">:">
    <input type="checkbox" class="cb" value="1" name="email_notifications" id="email_notifications" <mt:if name="email_notificaions">checked="checked"</mt:if> />
    <p class="hint">Send email notifications for entry transfer and publish attempts.</p>
</mtapp:setting>

<mtapp:setting
    id="automatic_transfer"
    label="<__trans phrase="Automatic Editor Transfer">:">
    <input type="checkbox" class="cb" value="1" name="automatic_transfer" id="automatic_transfer" <mt:if name="automatic_transfer">checked="checked"</mt:if>/>
    <p class="hint">Automatically transfer entries to first available editor upon publish attempt, where "first available" is defined as the editor with the most recent published entry.</p>
</mtapp:setting>
